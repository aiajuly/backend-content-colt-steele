<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head") %>
<body>

    <%- include("../../partials/nav") %>

    <main class="show-main container">

        <h3>User's Profile</h3>

        <div class="user">

            <div class="user-details">

                <div class="img-container">
                    <img src="<%= foundUser.profileImage %>" alt="Profile's Image">
                </div>
                <div class="name">Name: <%= foundUser.name %></div>
                <div class="email">Email: <%= foundUser.email %></div>

                <div class="buttons">
                    <a href="/users/<%= foundUser._id %>/tweets/new" class="tweet">Tweet</a>
                    <a href="/users/<%= foundUser._id %>/edit" class="edit">Edit</a>
                    <form action="/users/<%= foundUser._id %>?_method=Delete" method="POST">
                        <button class="delete">Delete</button>
                    </form>
                    
                </div>

            </div>

            <div class="user-tweets">
                <h4>Tweets:</h4>

                <% for(let tweet of foundUser.tweets) { %>
                    
                    <div class="tweet">
                    <%= tweet.tweet %> 
                    <span class="date"><%= tweet.createdDate %></span>
                    <div class="tweet-buttons">
                        <a href="/users/<%= foundUser._id %>/tweets/<%= tweet._id %>/edit">Edit</a>
                        <form action="/users/<%= foundUser._id %>/tweets/<%= tweet._id %>?_method=DELETE" method="POST"><button>Delete</button></form>
                    </div>
                    </div>

                <% } %>

    
            </div>

        </div>

    </main>

    
</body>
</html>